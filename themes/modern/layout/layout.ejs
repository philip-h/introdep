<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <%- css('css/style') %>
  <link rel="icon" type="image/png" href="/favicon.png">
  <title><%- config.title %> | <%- page.title %></title>
</head>
<body>
  <header class="header">

    <nav class="nav--desktop">
      <div class="nav--desktop__menu">
          <% for (var i in theme.menu){ %>
            <a href="<%- url_for(theme.menu[i]) %>" 
              class="nav--desktop__menu__item 
              <% if(is_current(theme.menu[i])) { %>
                nav--desktop__menu__item--active
                <% } %>">
              <%= i %></a>
          <% } %>
      </div>
    </nav>

    <button class="fab" onclick="toggleOverlay()">
      <i class="material-icons">menu</i>
    </button>

    <nav class="nav--mobile">
        <div class="nav--mobile__menu">
            <% for (var i in theme.menu){ %>
              <a href="<%- url_for(theme.menu[i]) %>" class="nav--mobile__menu__item">
                <%= i %>
              </a>
            <% } %>
        </div>
      </nav>
  </header>
  
  <%- body %>

  <%- js('js/script') %>
</body>
</html>